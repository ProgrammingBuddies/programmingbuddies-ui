{
  "name": "programmingbuddies",
  "version": "0.1.0",
  "proxy": "https://github.com",
  "private": true,
  "dependencies": {
    "@ant-design/colors": "4.0.0",
    "@craco/craco": "^5.6.4",
    "@reduxjs/toolkit": "^1.3.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "antd": "4.3.2",
    "axios": "0.19.2",
    "craco-antd": "^1.18.0",
    "craco-less": "^1.17.0",
    "install": "^0.13.0",
    "node-sass": "4.13.1",
    "nodemon": "^2.0.4",
    "npm": "^6.14.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "7.2.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "sass-loader": "^8.0.2",
    "tailwindcss": "^1.4.6"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "scripts": {
    "build:tailwind": "tailwindcss build src/styles/tailwind.css -o src/tailwind.generated.css",
    "prestart": "npm run build:tailwind",
    "prebuild": "npm run build:tailwind",
    "start": "craco start nodemon -w craco.config.js -w ./src/styles/antd.customize.less --exec \"craco start\"",
    "build": "craco start nodemon -w craco.config.js -w ./src/styles/antd.customize.less --exec \"craco build\"",
    "test": "craco start nodemon -w craco.config.js -w ./src/styles/antd.customize.less --exec \"craco test\"",
    "eject": "react-scripts eject",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
